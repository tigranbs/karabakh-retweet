{
  "compilerOptions": {
    "lib": [
      "es2018",
      "es5",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*" : ["types/*"]
    },
    "typeRoots": [
      "src/types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
